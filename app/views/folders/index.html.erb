<h1>Listing Albums</h1>

<table cellpadding="5" cellspacing="5">
  <tr>
  	
  <% @folders.each do |folder| %>
  <td>
   <table>
		<tr>
			<td>
				<%=link_to((image_tag folder.photos[0].avatar.url(:thumb) ),folder )unless folder.photos[0].nil?%>
			</td>
    	</tr>
	 	<tr>
    		<td>
    			<%= link_to (folder.album_name), folder %>
			</td>
		</tr>
    	<tr>
    		<td>
    			<%= link_to 'Edit', edit_folder_path(folder) %>
       			<%= link_to 'Destroy', folder, :confirm => 'Are you sure?',:method => :delete %>
			</td>
		</tr>
</table>
</td>
<% end %>

</tr>
</table>

<br />
<%= link_to 'New Album', new_folder_path %>
